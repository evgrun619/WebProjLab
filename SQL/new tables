CREATE TABLE ORDERS_BETON(
ORDERID  VARCHAR(10) NOT NULL ,
CONCRETETYPEID VARCHAR(2) NOT NULL,
SOMEH VARCHAR(3),
VOLUME VARCHAR(4),
SAPAK VARCHAR(20),
MSP_MDGM VARCHAR(20),
MOSAFIM VARCHAR(20),
DARGAT_HASIFA VARCHAR(20),
NIDGAM_FROM VARCHAR(20),
EFIUN_BETON VARCHAR(20),
GODEL_GARGIR VARCHAR(20),
SHITA_HASHPARA VARCHAR(20),
NIDGAM_BCOAH VARCHAR(20),
SHAA_START VARCHAR(5),
SHAA_END VARCHAR(5) 
);

CREATE UNIQUE INDEX IDX_ORDERID  ON ORDERS_BETON (ORDERID);


CREATE TABLE ORDERS_BETON_DETAIL(
MPP  INT AUTO_INCREMENT PRIMARY KEY,
ORDERID  VARCHAR(10) NOT NULL ,
MSP_MDGM VARCHAR(20) NOT NULL,
VOLUME_AZVA VARCHAR(4) DEFAULT "",
VOLUME_MZTB VARCHAR(4) DEFAULT "",
MIXER   VARCHAR(10) DEFAULT "",
MSP_TEUDA VARCHAR(15) DEFAULT "",
SHAA_EXIT VARCHAR(5) DEFAULT "",
SHAA_NTILA VARCHAR(5) DEFAULT "",
SHAA_AHANA VARCHAR(5) DEFAULT "",
SOMEH VARCHAR(3) DEFAULT ""

);

CREATE INDEX IDX_ORDERID_DET  ON ORDERS_BETON_DETAIL (ORDERID,MPP);



CREATE TABLE ORDERS_BETON_HOZEK7(
MPP  INT AUTO_INCREMENT PRIMARY KEY,
ORDERID  VARCHAR(10) NOT NULL ,
MSP_MDGM VARCHAR(20) NOT NULL,
DATE_HOZEK VARCHAR(12) DEFAULT "",
OREH       VARCHAR(4) DEFAULT "",
GOVA       VARCHAR(4) DEFAULT "",
OMES   VARCHAR(5) DEFAULT "",
HOZEK  VARCHAR(5) DEFAULT ""


);

CREATE INDEX IDX_ORDERID_HOZ7  ON ORDERS_BETON_HOZEK7 (ORDERID,MPP);


CREATE TABLE ORDERS_BETON_HOZEK28(
MPP  INT AUTO_INCREMENT PRIMARY KEY,
ORDERID  VARCHAR(10) NOT NULL ,
MSP_MDGM VARCHAR(20) NOT NULL,
DATE_HOZEK VARCHAR(12) DEFAULT "",
OREH       VARCHAR(4) DEFAULT "",
GOVA       VARCHAR(4) DEFAULT "",
OMES   VARCHAR(5) DEFAULT "",
HOZEK  VARCHAR(5) DEFAULT ""


);

CREATE INDEX IDX_ORDERID_HOZ28  ON ORDERS_BETON_HOZEK28 (ORDERID,MPP);


CREATE TABLE ORDERS_BETON_HOZEK_MORE(
MPP  INT AUTO_INCREMENT PRIMARY KEY,
ORDERID  VARCHAR(10) NOT NULL ,
MSP_MDGM VARCHAR(20) NOT NULL,
DATE_HOZEK VARCHAR(12) DEFAULT "",
OREH       VARCHAR(4) DEFAULT "",
GOVA       VARCHAR(4) DEFAULT "",
OMES   VARCHAR(5) DEFAULT "",
HOZEK  VARCHAR(5) DEFAULT ""

);

CREATE INDEX IDX_ORDERID_HOZM  ON ORDERS_BETON_HOZEK_MORE (ORDERID,MPP);








